<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.analizate.main"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/analizatelogo"
        android:label="@string/app_name" >
        <activity
            android:name="com.analizate.main.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.analizate.main.DashboardActivity" 
            android:configChanges="orientation" 
    		android:screenOrientation="portrait" 
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name="com.analizate.main.HospitalActivity" 
            android:configChanges="orientation" 
    		android:screenOrientation="portrait" 
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name="com.analizate.main.HospitalInfoActivity" 
            android:configChanges="orientation" 
    		android:screenOrientation="portrait" 
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name="com.analizate.main.MedicalActivity" 
            android:configChanges="orientation" 
    		android:screenOrientation="portrait" 
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name="com.analizate.main.PharmsActivity" 
            android:configChanges="orientation" 
    		android:screenOrientation="portrait" 
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name="com.analizate.main.AboutUsActivity" 
            android:configChanges="orientation" 
    		android:screenOrientation="portrait" 
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name="com.analizate.main.OurServicesActivity" 
            android:configChanges="orientation" 
    		android:screenOrientation="portrait" 
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name="com.analizate.main.OurServicesInfoActivity" 
            android:configChanges="orientation" 
    		android:screenOrientation="portrait" 
            android:label="@string/app_name" >
        </activity>
    </application>
    
    <!-- Permission - Internet Connect -->
    <uses-permission android:name="android.permission.INTERNET" />
 
    <!-- Network State Permissions -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- GPS Permissions -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" /> 
    
    <!-- GPS Permissions Extra -->
	<uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />
	<uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION" />
	<uses-permissio android:name="android.permission.CONTROL_LOCATION_UPDATES" />
    

</manifest>